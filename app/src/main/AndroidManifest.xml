<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="proed.hotelbooking">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SearchCountry" />
        <activity android:name=".BookActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".LogIn" />
        <activity android:name=".SignUp" />
        <activity android:name=".AdminLogInActivity" />
        <activity android:name=".HotelInfoActivity" />
        <activity android:name=".RoomInfoActivity" />
        <activity android:name=".ViewRoomContents" />
        <activity android:name=".ViewHotelContents" />
        <activity android:name=".SearchHotelActivity" />
        <activity android:name=".SearchRoomActivity" />
        <activity android:name=".UpdateRoomStatusActivity" />
        <activity android:name=".ViewCustomersActivity"></activity>
    </application>

</manifest>